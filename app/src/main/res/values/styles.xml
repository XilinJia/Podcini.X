<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Podcini" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.Podcini.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/accent_light</item>
    </style>

    <style name="Theme.Podcini.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_darktheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Podcini.Light.NoTitle" parent="Theme.Podcini.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Podcini.Dark.NoTitle" parent="Theme.Podcini.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Podcini.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/launcher_animate</item>
        <item name="postSplashScreenTheme">@style/Theme.Podcini.Light</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Widget.Podcini.ActionBar" parent="Widget.Material3.Light.ActionBar.Solid">
        <item name="background">?android:attr/colorBackground</item>
        <item name="elevation">0dp</item>
    </style>

